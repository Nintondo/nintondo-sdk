{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./src",
    "declaration": true,
    "rootDir": "./ts_src",
    "types": ["node"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "noUnusedParameters": true
  },
  "include": ["ts_src/**/*.ts", "ts_src/**/*.tsx"],
  "exclude": ["**/*.spec.ts", "node_modules/**/*"]
}
